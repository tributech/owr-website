---
const mobileFeatures = [
  { title: 'Army Lists On-the-Go', description: 'Access and edit your army lists anywhere, anytime' },
  { title: 'Real-time Sync', description: 'Changes sync instantly between web and mobile' },
  { title: 'Push Notifications', description: 'Get notified about tournament updates and results' },
];
---

<section id="mobile" class="bg-white py-16 sm:py-24 scroll-mt-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-2 lg:gap-16 items-center">
      <!-- Phone mockup -->
      <div class="mb-12 lg:mb-0 flex justify-center">
        <div class="relative">
          <div class="w-64 h-[512px] bg-gray-900 rounded-[3rem] p-3 shadow-2xl">
            <div class="w-full h-full bg-gray-100 rounded-[2.5rem] overflow-hidden flex flex-col">
              <div class="h-8 bg-gray-900 flex items-center justify-center">
                <div class="w-20 h-5 bg-gray-800 rounded-full"></div>
              </div>
              <div class="flex-1 p-4 space-y-4">
                <div class="h-8 bg-gray-200 rounded-lg w-3/4"></div>
                <div class="space-y-2">
                  <div class="h-16 bg-gray-200 rounded-lg"></div>
                  <div class="h-16 bg-gray-200 rounded-lg"></div>
                  <div class="h-16 bg-gray-200 rounded-lg"></div>
                </div>
                <div class="h-8 bg-owr-gold/30 rounded-lg w-1/2 mx-auto"></div>
                <div class="space-y-2">
                  <div class="h-12 bg-gray-200 rounded-lg"></div>
                  <div class="h-12 bg-gray-200 rounded-lg"></div>
                </div>
              </div>
              <div class="h-16 bg-white border-t border-gray-200 flex items-center justify-around px-4">
                <div class="w-8 h-8 bg-gray-200 rounded-full"></div>
                <div class="w-8 h-8 bg-gray-900 rounded-full"></div>
                <div class="w-8 h-8 bg-gray-200 rounded-full"></div>
                <div class="w-8 h-8 bg-gray-200 rounded-full"></div>
              </div>
            </div>
          </div>
          <div class="absolute -top-4 -right-4 w-24 h-24 bg-owr-gold/20 rounded-full blur-2xl"></div>
          <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-gray-200 rounded-full blur-2xl"></div>
        </div>
      </div>

      <!-- Content -->
      <div>
        <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-owr-gold text-gray-900 text-sm font-medium mb-4">
          OWR Pro
        </span>
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">
          Take OWR With You
        </h2>
        <p class="text-gray-500 mb-8">
          The OWR mobile app puts everything you need in your pocket. Build and manage army lists,
          check tournament schedules, and stay connected with your local scene.
        </p>

        <div class="space-y-6 mb-8">
          {mobileFeatures.map((feature) => (
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center shrink-0">
                <svg class="h-5 w-5 text-gray-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">{feature.title}</h3>
                <p class="text-sm text-gray-500">{feature.description}</p>
              </div>
            </div>
          ))}
        </div>

        <div class="flex flex-wrap gap-4">
          <a href="#" class="inline-flex items-center gap-2 px-4 py-2 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-colors">
            <svg class="h-6 w-6" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z" />
            </svg>
            App Store
          </a>
          <a href="#" class="inline-flex items-center gap-2 px-4 py-2 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-colors">
            <svg class="h-6 w-6" viewBox="0 0 24 24" fill="currentColor">
              <path d="M3.609 1.814L13.792 12 3.61 22.186a.996.996 0 01-.61-.92V2.734a1 1 0 01.609-.92zm10.89 10.893l2.302 2.302-10.937 6.333 8.635-8.635zm3.199-3.198l2.807 1.626a1 1 0 010 1.73l-2.808 1.626L15.206 12l2.492-2.491zM5.864 2.658L16.8 8.99l-2.302 2.302-8.634-8.634z" />
            </svg>
            Google Play
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
